<%- include('layout.ejs'); %>
<style>
    .full-width-textarea  {
    width: 100%; 
    margin-bottom: 20px; 
    resize: both; 
    overflow: auto;
}
.container {
    max-width: none;
}
</style>
<div class="container">
    <h1>Edit Journey</h1>
    <form action="/journey/<%= journey._id %>?_method=PATCH" method="POST">
      
        <div class="full-width-textarea">
            <label for="journey">Journey:</label>
            <textarea style="width: 100%; outline: none; padding: 10px;" id="journey" name="journey" rows="10" placeholder="Enter journey description..." required><%= journey.journey %></textarea>
        </div>
        
        
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
